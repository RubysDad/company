<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Litify Alert", sticky: false) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "Litify Error", sticky: false) %>
<% else %>
  <%= js add_gritter(flash[:notice], title: "Litify Notification", sticky: false) %>
<% end %>