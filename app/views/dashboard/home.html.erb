<h1 class="Greeting">Hello,  <%= current_user.name %></h1>
<div class="Dashboard-Content">
  <%= link_to conversations_path, :action => 'index' do %>
    <div class="Dashboard-MailBox">
      <h1>View Inbox</h1>
      <i class="fa fa-envelope-o" aria-hidden="true"></i>
    </div>
  <% end %>

  <%= link_to chat_room_show_path, :action => 'show' do %>
    <div class="Dashboard-ChatBox">
      <h1>Office Chat</h1>
      <i class="fa fa-commenting-o" aria-hidden="true"></i>
    </div>
  <% end %>
</div>
